# Production Environment Configuration
NODE_ENV=production
EMAIL_SERVER_PORT=3000

# SMTP Configuration (Replace with your production email service)
SMTP_HOST=your-smtp-host.com
SMTP_PORT=587
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=Thank You Cards

# API Configuration (Replace with your production API URL)
VITE_API_URL=https://your-api-domain.com/api
VITE_EMAIL_SERVICE_URL=https://your-api-domain.com/api

# Firebase Configuration (REQUIRED - Replace with your actual values)
VITE_FIREBASE_API_KEY=your_production_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_EMAIL_TESTING=false

# Logging
VITE_LOG_LEVEL=error

# Debug Settings
DEBUG_MODE=false
CONSOLE_LOGGING=false
